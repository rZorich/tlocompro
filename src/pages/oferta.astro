import BaseLayout from "../layouts/BaseLayout.astro";

const title = "Vende tu auto r√°pido en Chile | Tasaci√≥n inmediata en 24 horas | Tlocompro";
const description = "Completa el formulario para recibir una oferta inmediata por tu veh√≠culo usado. Pago al instante, firma en notar√≠a y retiro en 24 horas en cualquier comuna de Chile.";
const canonical = "https://tlocompro.cl/oferta";
